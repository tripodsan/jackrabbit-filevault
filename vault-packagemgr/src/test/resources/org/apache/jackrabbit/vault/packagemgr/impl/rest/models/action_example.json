{
    "links": [
        {
            "rel": [
                "self"
            ],
            "href": "http://localhost:8080/system"
        }
    ],
    "actions": [
        {
            "method": "POST",
            "name": "create-stuff",
            "href": "http://localhost:8080/system"
        },
        {
            "method": "POST",
            "name": "default-action",
            "href": "http://localhost:8080/system"
        },
        {
            "method": "PUT",
            "name": "put-action",
            "type": "application/json",
            "title": "create new stuff",
            "href": "http://localhost:8080/system/stuff/{id}",
            "fields": [
                {
                    "name": "title",
                    "type": "text"
                },
                {
                    "name": "flag",
                    "type": "checkbox",
                    "value": "false"
                }
            ]
        },
        {
            "method": "PUT",
            "name": "raw-action",
            "href": "http://localhost:8080/system"
        },
        {
            "method": "POST",
            "name": "upload-file",
            "type": "multipart/form-data",
            "href": "http://localhost:8080/system",
            "fields": [
                {
                    "name": "thumbnail",
                    "type": "file"
                }
            ]
        },
        {
            "method": "POST",
            "name": "upload-person",
            "type": "application/x-www-form-urlencoded",
            "href": "http://localhost:8080/system",
            "fields": [
                {
                    "name": "name",
                    "type": "text"
                },
                {
                    "name": "email",
                    "type": "text"
                },
                {
                    "name": "birthday",
                    "type": "datetime"
                },
                {
                    "name": "shoe-size",
                    "type": "number"
                }
            ]
        },
        {
            "method": "POST",
            "name": "upload-thumbnail",
            "type": "multipart/form-data",
            "title": "Upload thumbnail",
            "href": "http://localhost:8080/system/thumbnail",
            "fields": [
                {
                    "name": "title",
                    "type": "text"
                },
                {
                    "name": "file",
                    "type": "file",
                    "title": "File to upload"
                }
            ]
        },
        {
            "method": "POST",
            "name": "upload-with-fileupload",
            "type": "multipart/form-data",
            "href": "http://localhost:8080/system",
            "fields": [
                {
                    "name": "title",
                    "type": "text"
                },
                {
                    "name": "file",
                    "type": "file"
                }
            ]
        }
    ]
}